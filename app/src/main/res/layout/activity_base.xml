<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity">
//https://colorscheme.ru/color-converter.html

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/layout_style_simple"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/strelki" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="9sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/circle_button"
        android:scaleType="fitCenter"
        android:src="@drawable/setings" />
</LinearLayout>
        <LinearLayout   android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/layout_style_simple"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

            <ImageSwitcher
                android:id="@+id/status"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/connecting" />

                <ImageView
                    android:id="@+id/loading"
                    android:layout_width="35dp"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/loading"/>
            </FrameLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="200dp"
                android:layout_height="69dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="32dp"
                android:layout_height="32dp"

                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />


        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/impulse" />

        <TextView
            android:id="@+id/impulseText"
            android:layout_width="80dp"
            android:layout_height="59dp"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignRight="@+id/imageView5"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="200dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/voltage" />

        <TextView
            android:id="@+id/voltageText"
            android:layout_width="80dp"
            android:layout_height="59dp"
            android:layout_alignLeft="@+id/imageView8"
            android:layout_alignTop="@+id/imageView8"
            android:layout_alignRight="@+id/imageView8"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:textColor="@color/textColor"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="1dp"
            android:textSize="12sp"
            android:layout_marginRight="200dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>
            </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/speed" />

            <TextView
                android:id="@+id/speedText"
                android:layout_width="80dp"
                android:layout_height="59dp"
                android:layout_alignLeft="@+id/imageView9"
                android:layout_alignTop="@+id/imageView9"
                android:layout_alignRight="@+id/imageView9"
                android:layout_alignBottom="@+id/imageView9"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:textSize="12sp"
                android:textColor="@color/textColor"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="200dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text=""
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/pressure" />

            <TextView
                android:id="@+id/pressureText"
                android:layout_width="80dp"
                android:layout_height="59dp"
                android:layout_alignLeft="@+id/imageView10"
                android:layout_alignTop="@+id/imageView10"
                android:layout_alignRight="@+id/imageView10"
                android:layout_alignBottom="@+id/imageView10"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:textColor="@color/textColor"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="1dp"
                android:textSize="12sp"
                android:layout_marginRight="200dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:text=""
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout   android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout_style_simple"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="5dp"
            android:layout_marginTop="2dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/imp" />

        <Button
            android:id="@+id/decremImp"
            android:layout_width="10dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="-10 мкс"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_simple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/setIText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:paddingLeft="30dp"
            android:textColor="@color/textColor"
            android:text=""
            android:background="@drawable/edit_text_style"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/incremImp"
            android:layout_width="10dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="+10 мкс"
            android:layout_marginTop="1dp"
            android:layout_marginRight="12dp"
            android:textSize="10sp"
            android:background="@drawable/btn_simple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />



    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="5dp"
                android:layout_marginTop="2dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/rate" />

            <Button
                android:id="@+id/decremRate"
                android:layout_width="10dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="-10 в/м"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:background="@drawable/btn_simple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/setRText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:paddingLeft="30dp"
                android:text=""
                android:textColor="@color/textColor"
                android:background="@drawable/edit_text_style"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/incremRate"
                android:layout_width="10dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="+10 в/м"
                android:textSize="10sp"
                android:layout_marginRight="12dp"
                android:background="@drawable/btn_simple"
                android:layout_marginTop="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/cutoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginLeft="12dp"
            android:theme="@style/MySwitch"
            android:text="Режим отсечки" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/dImp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:theme="@style/MySwitch"
            android:layout_marginLeft="12dp"
            android:text="Режим динамического импульса" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/dRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginLeft="12dp"
            android:theme="@style/MySwitch"
            android:text="Режим динамической скорострельности" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:text="Сохранить настройки"
            android:background="@drawable/btn_simple" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/DeviceBtn"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:text="Расширенные настройки"
            android:theme="@style/PrimaryFlatButton"
            android:background="@drawable/btn_simple"/>
        </FrameLayout>
    </LinearLayout>
        <Button
            android:id="@+id/fireButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="FIRE!"
            android:textColor="#ffffff"
            android:layout_marginTop="12dp"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/speedText"
            android:background = "@drawable/oval_button_unactive"
            android:layout_gravity="center"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/SafeSwitch"
            android:layout_below="@+id/switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:theme="@style/MySwitch"
            android:textColor="@color/textColor"
            android:layout_gravity="center" />



    </LinearLayout>


</ScrollView>