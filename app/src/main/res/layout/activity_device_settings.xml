<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceSettingsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:srcCompat="@drawable/logo_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:text="Импульс, мкс"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:textStyle="bold" />
</RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <EditText
            android:id="@+id/impText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/textColor"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/edit_text_style"
            android:inputType="textPersonName" />
        </RelativeLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center"
                    android:text="Нижний импульс, мкс"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/limpText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/textColor"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/edit_text_style"
                    android:inputType="textPersonName" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center"
                    android:text="Скорострельность, в/мин"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/rateText"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/textColor"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/edit_text_style"
                    android:inputType="textPersonName" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center"
                    android:text="Длина отсечки, выс"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/rateLength"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/textColor"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/edit_text_style"
                    android:inputType="textPersonName" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center"
                    android:text="Длина динамики, выс"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/dynamicLength"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/textColor"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/edit_text_style"
                    android:inputType="textPersonName" />
            </RelativeLayout>


        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/cutoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginLeft="12dp"
            android:theme="@style/MySwitch"
            android:text="Режим отсечки" />


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/dImp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_marginLeft="12dp"
            android:theme="@style/MySwitch"
            android:text="Режим динамического импульса" />
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/dRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/textColor"
            android:theme="@style/MySwitch"
            android:text="Режим динамической скорострельности" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_style"
                    android:gravity="center"
                    android:text="Ограничение, м/c"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/speed"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/textColor"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/edit_text_style"
                    android:inputType="textPersonName" />
            </RelativeLayout>


        </LinearLayout>


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/safer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/textColor"
            android:theme="@style/MySwitch"
            android:text="Защита от превышения скорости" />

        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Сохранить настройки"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:theme="@style/PrimaryFlatButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>
</ScrollView>