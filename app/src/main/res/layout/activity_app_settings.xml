<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appSettingsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:srcCompat="@drawable/logo_grey" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="200dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Настройки приложения"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@drawable/edit_text_style"
                android:gravity="center"
                android:text="Задержка синхронизации, с"
                android:textColor="@color/textColor"
                android:textSize="12sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/delayText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="12dp"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@drawable/edit_text_style"
                android:gravity="center"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="12sp" />
        </RelativeLayout>


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/userBtn"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Изменить пользователя"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:theme="@style/PrimaryFlatButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/parBtn"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Изменить параметры оружия"
                android:layout_marginRight="10dp"
                android:textSize="10sp"
                android:theme="@style/PrimaryFlatButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
        <Button
            android:id="@+id/helpButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:text="О программе"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:theme="@style/PrimaryFlatButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>